<!DOCTYPE html>
<html lang="en">

@* Head & Metadata *@
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MedicaWeb_MVC</title>

	@* CSSs *@
	<link rel="stylesheet" href="~/lib/bootswatch/litera/bootstrap.min.css" />
	<link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/lib/toastr.js/toastr.min.css" />
	<link rel="stylesheet" href="~/lib/datatables.net-bs5/datatables.bootstrap5.min.css" />
	<link rel="stylesheet" href="~/MedicaWeb_MVC.styles.css" asp-append-version="true" />
</head>

@* Body *@
<body class="d-flex flex-column min-vh-100">

	@* Header *@
	<header class="mb-3">
		<partial name="ReusableViews/_NavBar" />
	</header>

	@* Container *@
	<main role="main" class="flex-grow-1">
		<div class="container-fluid">
			@RenderBody()
		</div>
	</main>

	@* Footer *@
	<partial name="ReusableViews/_Footer" />

	@* jQuery and Libraries - Load them at the bottom to optimize performance *@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/lib/toastr.js/toastr.min.js"></script>
	<script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
	<script src="~/lib/datatables.net/datatables.min.js" />
	<script src="~/lib/datatables.net-bs5/datatables.bootstrap5.min.js" asp-append-version="true"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
