@using MedicaWeb_MVC.ViewModels
@model IEnumerable<CourseVM>

@{
	ViewData["Title"] = "Home Page";
}
<div>
	<!-- Hero Section -->
	<section class="hero-section">
		<div class="container text-center">
			<div class="row align-items-center justify-content-center">
				<h1 class="hero-title">Welcome to Doreamon Hub</h1>
				<p class="hero-subtitle">Expand your knowledge with our interactive science courses.</p>
				<div class="search-bar">
					<form>
						<div class="row g-2">
							<div class="col-md-9">
								<input type="text" class="form-control" placeholder="Searching...">
							</div>
							<div class="col-md-3">
								<button type="submit" class="search-btn w-100">Search</button>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</section>

	<!-- Stats Section -->
	<section class="py-5">
		<div class="container">
			<h2 class="title text-center mb-4">About Us</h2>
			<div class="row">
				<div class="col-md-3">
					<div class="stats-box">
						<div class="stats-icon"><i class="bi bi-briefcase"></i></div>
						<div class="stats-number">175,324</div>
						<div class="stats-text">Courses</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="stats-box">
						<div class="stats-icon"><i class="bi bi-building"></i></div>
						<div class="stats-number">97,354</div>
						<div class="stats-text">Lecturers</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="stats-box">
						<div class="stats-icon"><i class="bi bi-people"></i></div>
						<div class="stats-number">38,471,54</div>
						<div class="stats-text">Candidates</div>
					</div>
				</div>
				<div class="col-md-3">
					<div class="stats-box">
						<div class="stats-icon"><i class="bi bi-clock"></i></div>
						<div class="stats-number">7,532</div>
						<div class="stats-text">Events & Workshops</div>
					</div>
				</div>
			</div>
		</div>
	</section>

	<hr class="m-5">
</div>
<div class="container text-center mt-5">


	<!-- Courses Section -->
	<div class="container my-5">
		<h2 class="title text-center mb-4">Explore Our Courses</h2>
		<div class="row row-cols-1 row-cols-md-3 g-4">
			@foreach (var c in Model)
			{
				<div class="col">
					<div class="card h-100 shadow-lg border-0">
						<img src="@c.ImgUrl" class="card-img-top" alt="@c.Name" style="height: 200px; object-fit: cover;">
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">@c.Name</h5>
							<p class="card-text flex-grow-1">@c.Description</p>
							<a asp-action="Details" asp-controller="Courses" asp-route-id="@c.Id"
								class="btn btn-orange mt-auto">
								<i class="bi bi-chat-left-text"></i> Feedbacks: @c.Feedbacks.Count()
							</a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>

	<hr class="my-5">

	<!-- Footer -->
	<p class="text-muted">Join thousands of learners exploring the wonders of science.</p>
</div>
