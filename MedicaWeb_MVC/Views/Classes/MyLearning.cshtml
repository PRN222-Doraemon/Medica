@* @model LearningViewModel

<div class="container py-4">
    <h1 class="mb-4">My Learning</h1>

    <!-- Filter Buttons -->
    <div class="mb-4">
        <div class="btn-group" role="group">
            <button type="button" class="btn @(Model.SelectedFilter == "all" ? "btn-primary" : "btn-outline-primary")">
                In Progress
            </button>
            <button type="button" class="btn @(Model.SelectedFilter == "starting later" ? "btn-primary" : "btn-outline-primary")">
                Starting Later
            </button>
            <button type="button" class="btn @(Model.SelectedFilter == "in progress" ? "btn-primary" : "btn-outline-primary")">
                Saved
            </button>
            <button type="button" class="btn @(Model.SelectedFilter == "completed" ? "btn-primary" : "btn-outline-primary")">
                Completed
            </button>
        </div>
    </div>

    <!-- Course Cards -->
    <div class="row mb-4">
        @foreach (var course in Model.Courses.Take(3))
        {
            <div class="col-md-4">
                <div class="card h-100">
                    <div class="position-relative">
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;">
                        <button class="btn btn-light btn-sm position-absolute top-0 end-0 m-2 rounded-circle">
                            <i class="bi bi-three-dots-vertical"></i>
                        </button>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title" style="display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden;">
                            @course.Title
                        </h5>
                        <p class="card-text text-muted small">
                            @string.Join(", ", course.Instructors)
                        </p>
                        @if (course.Progress > 0)
                        {
                            <div class="progress mb-2" style="height: 8px;">
                                <div class="progress-bar" role="progressbar" style="width: @(course.Progress)%"
                                     aria-valuenow="@course.Progress" aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                            <small class="text-muted">@course.Progress% complete</small>
                        }
                        else
                        {
                            <button class="btn btn-primary w-100">START COURSE</button>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- See More Button -->
    @if (Model.Courses.Count < Model.TotalCourses)
    {
        <div class="text-center">
            <button class="btn btn-light px-4">
                See More
            </button>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <style>
        .btn-group .btn {
            border-radius: 20px !important;
            margin: 0 5px;
        }

        .card {
            transition: transform 0.2s;
        }

            .card:hover {
                transform: translateY(-5px);
            }
    </style>
} *@