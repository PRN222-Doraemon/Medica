@model CourseCreateVM
@{
    ViewData["Title"] = "Update Course";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <!-- Header with gradient background -->
                    <div class="bg-gradient-primary p-4 rounded-3 mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h3 mb-0 text-white">Update Course</h1>
                            <a asp-action="Details" asp-controller="Courses" asp-route-id="@Model.Id"
                               class="btn btn-light">
                                <i class="bi bi-arrow-left"></i> Back to Course
                            </a>
                        </div>
                    </div>

                    <form asp-action="Update" asp-controller="Courses" method="post" id="updateCourseForm" enctype="multipart/form-data">
                        <input type="hidden" asp-for="Id" />
                        <input hidden asp-for="@Model.CreatedByUserID" />

                        <!-- Basic Information with subtle background -->
                        <div class="mb-4 p-4 bg-light rounded-3">
                            
                            <h5 class="mb-3 text-primary border-bottom pb-2">Basic Information</h5>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="bi bi-book me-2"></i>Course Name
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg shadow-sm" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CategoryID" class="form-label fw-semibold">
                                    <i class="bi bi-book me-2"></i>Category
                                </label>
                                <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control form-control-lg shadow-sm" required></select>
                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Duration" class="form-label fw-semibold">
                                    <i class="bi bi-book me-2"></i>Duration
                                </label>
                                <input asp-for="Duration" class="form-control form-control-lg shadow-sm" required>
                                <span asp-validation-for="Duration" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="bi bi-journal-text me-2"></i>What students will learn
                                </label>
                                <textarea asp-for="Description" class="form-control shadow-sm" rows="4" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Course Content -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="bi bi-collection me-2"></i>Course Content
                                </h5>
                                <button type="button" class="btn btn-primary btn-sm shadow-sm" onclick="addChapter()">
                                    <i class="bi bi-plus-lg"></i> Add Chapter
                                </button>
                            </div>

                            <div id="chaptersContainer" class="accordion">
                                @if (Model.CourseChapters != null)
                                {
                                    @for (int i = 0; i < Model.CourseChapters.Count(); i++)
                                    {
                                        var chapter = Model.CourseChapters.ToList()[i];
                                        var collapseId = $"collapse-{chapter.Id}";

                                        <div class="accordion-item chapter-card mb-3 shadow-sm border" data-chapter-index="@i">
                                            <div class="accordion-header">
                                                <div class="d-flex align-items-center w-100">
                                                    <button class="btn btn-link text-primary fw-bold me-2" type="button"
                                                            data-bs-toggle="collapse" data-bs-target="#@collapseId"
                                                            aria-expanded="true" aria-controls="@collapseId">
                                                        <i class="bi bi-chevron-down"></i>
                                                    </button>
                                                    <input type="hidden" name="CourseChapters[@i].Id" value="@chapter.Id" />
                                                    <input type="text" class="form-control chapter-name flex-grow-1"
                                                           name="CourseChapters[@i].Name"
                                                           value="@chapter.Name" required
                                                           placeholder="Enter chapter name">

                                                    <button type="button" class="btn btn-outline-danger btn-sm ms-2 me-2"
                                                            onclick="removeChapter(this)">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                </div>
                                            </div>

                                            <div id="@collapseId" class="accordion-collapse collapse">
                                                <div class="accordion-body bg-light">
                                                    <div class="resources-container">
                                                        @if (chapter.Resources != null)
                                                        {
                                                            @for (int j = 0; j < chapter.Resources.Count(); j++)
                                                            {
                                                                var resource = chapter.Resources.ToList()[j];

                                                                <input hidden name="CourseChapters[@i].Resources[@j].CreatedByUserID" value="@resource.CreatedByUserID" />
                                                                <div class="resource-item mb-3 p-3 bg-white rounded shadow-sm" data-resource-index="@j">
                                                                    <div class="d-flex align-items-center gap-3">
                                                                        <i class="bi bi-play-circle text-primary fs-5"></i>
                                                                        <input type="hidden" name="CourseChapters[@i].Resources[@j].Id" value="@resource.Id" />
                                                                        <div class="flex-grow-1">
                                                                            <input type="text" class="form-control"
                                                                                   name="CourseChapters[@i].Resources[@j].Title"
                                                                                   value="@resource.Title" required
                                                                                   placeholder="Enter resource title">
                                                                        </div>
                                                                        <div class="d-flex gap-2">
                                                                            <div class="input-group">
                                                                                <input type="file" class="form-control form-control-sm"
                                                                                       name="CourseChapters[@i].Resources[@j].File"
                                                                                       accept=".pdf,.doc,.docx,.ppt,.pptx,.mp4,.mp3">
                                                                            </div>
                                                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                                                    onclick="removeResource(this)">
                                                                                <i class="bi bi-trash"></i>
                                                                            </button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            }
                                                        }
                                                    </div>
                                                    <button type="button" class="btn btn-outline-primary btn-sm mt-3" onclick="addResource(this)">
                                                        <i class="bi bi-plus-lg"></i> Add Resource
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="bi bi-check2-circle me-2"></i>Update Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df 0%, #224abe 100%);
    }
</style>