@model ListVM<CourseVM>

<div class="container py-4">
    <!-- Search and Filter Header -->
    <div class="row mb-4">
        <div class="col-md-6">
            @await Html.PartialAsync("~/Views/Shared/ReusableViews/_SearchBar.cshtml", Model.SearchValue)
        </div>
        <div class="col-md-6 d-flex justify-content-end gap-2">
            <form asp-controller="Courses" asp-action="Index" method="get" id="filterForm">
                <div class="d-flex gap-2">
                    <select class="form-select w-auto" name="CategoryId" asp-items="ViewBag.Categories" onchange="submitForm()">
                        <option value="">All Category</option>
                    </select>
                    <select class="form-select w-auto" name="Status" asp-items="ViewBag.Status" onchange="submitForm()">
                    </select>
                </div>
            </form>
            <a class="btn btn-primary d-flex align-items-center gap-2" asp-controller="Courses" asp-action="Upsert">
                <i class="bi bi-plus-lg"></i>
                Create new
            </a>
        </div>
    </div>


    <!-- Course Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var course in Model.Items)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    <img src="@course.ImgUrl" class="card-img-top" alt="Course Image"
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <h5 class="card-title mb-0">@course.Name</h5>
                            <span class="badge rounded-pill @(course.Status.ToString() == "Active" ? "bg-success" : "bg-secondary")">
                                @course.Status
                            </span>
                        </div>
                        <p class="card-text text-muted small mb-2">
                            Category: <span class="fw-medium">@course.CategoryName</span>
                        </p>
                        <p class="card-text text-muted small mb-2">
                            Upload by <span class="fw-medium">@course.CreatedByUserName</span>
                        </p>
                        <div class="d-flex align-items-center gap-2 text-muted small">
                            <i class="bi bi-clock"></i>
                            <span>Updated @course.UpdatedAt</span>
                        </div>
                    </div>
                    <div class="card-footer bg-white border-top-0">
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm w-100">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <div>
        @await Html.PartialAsync("~/Views/Shared/ReusableViews/_Paging.cshtml", Model.PagingInfo)
    </div>
</div>


<script>
    function submitForm() {
        document.getElementById("filterForm").submit();
    }
</script>
