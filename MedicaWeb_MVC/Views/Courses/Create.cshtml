@model CourseCreateVM
@{
    ViewData["Title"] = "Create Course";
}

<head>
    <link rel="stylesheet" href="~/css/pages/course-create.css" />
</head>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-body p-4">
                    <!-- Header with gradient background -->
                    <div class="bg-gradient-primary p-4 rounded-3 mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1 class="h3 mb-0 text-white">Create New Course</h1>
                            <a asp-action="Index" asp-controller="Courses"
                               class="btn btn-light">
                                <i class="bi bi-arrow-left"></i> Back to Courses
                            </a>
                        </div>
                    </div>

                    <form asp-action="Create" asp-controller="Courses" method="post" id="createCourseForm" enctype="multipart/form-data">
                        <!-- Basic Information -->
                        <div class="mb-4 p-4 bg-light rounded-3">
                            <h5 class="mb-3 text-primary border-bottom pb-2">Basic Information</h5>
                            <div class="mb-3">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="bi bi-book me-2"></i>Course Name
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg shadow-sm" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CategoryID" class="form-label fw-semibold">
                                    <i class="bi bi-book me-2"></i>Category
                                </label>
                                <select asp-for="CategoryID" asp-items="ViewBag.Categories" class="form-control form-control-lg shadow-sm" required></select>
                                <span asp-validation-for="CategoryID" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">
                                    <i class="bi bi-journal-text me-2"></i>What students will learn
                                </label>
                                <textarea asp-for="Description" class="form-control shadow-sm" rows="4" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Course Content -->
                        <div class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="text-primary border-bottom pb-2">
                                    <i class="bi bi-collection me-2"></i>Course Content
                                </h5>
                                <button type="button" class="btn btn-primary btn-sm shadow-sm" onclick="addChapter()">
                                    <i class="bi bi-plus-lg"></i> Add Chapter
                                </button>
                            </div>

                            <div id="chaptersContainer" class="accordion">
                                <!-- Chapters will be added here dynamically -->
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="bi bi-plus-circle me-2" asp-controller="Courses" asp-action="Create" method="Post"></i>Create Course
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df 0%, #224abe 100%) !important;
    }
    
</style>
<script src="~/js/courses/course-create.js"></script>