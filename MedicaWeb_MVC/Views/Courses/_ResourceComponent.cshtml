@model ResourceVM
<div class="resource-item mb-3 p-3 bg-white rounded shadow-sm" data-resource-index="@Model.Id">
    <div class="d-flex align-items-center gap-3">
        <i class="bi bi-play-circle text-primary fs-5"></i>
        <div class="flex-grow-1">
            <input type="text" class="form-control"
                   name="CourseChapters[@Model.CourseChapterID].Resources[@Model.CourseChapterID].Title"
                   required placeholder="Enter resource title">
        </div>
        <div class="d-flex gap-2">
            <div class="input-group">
                <input type="file" class="form-control form-control-sm"
                       name="CourseChapters[@Model.CourseChapterID].Resources[@Model.CourseChapterID].File"
                       accept=".pdf,.doc,.docx,.ppt,.pptx,.mp4,.mp3">
            </div>
            <button type="button" class="btn btn-outline-danger btn-sm"
                    onclick="removeResource(this)">
                <i class="bi bi-trash"></i>
            </button>
        </div>
    </div>
</div>