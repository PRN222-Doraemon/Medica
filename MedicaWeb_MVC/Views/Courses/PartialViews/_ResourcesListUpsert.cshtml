@model CourseChapterCreateVM

@if (Model.Resources != null)
{
    @for (int j = 0; j < Model.Resources.Count(); j++)
    {
        var resource = Model.Resources.ToList()[j];

        <input type="hidden"
               name="CourseChapters[@Model.Id].Resources[@j].FileUrl"
               value="@resource.FileUrl" />

        <div class="resource-item mb-3 p-3 bg-white rounded shadow-sm"
             data-resource-index="@j">
            <div class="d-flex flex-column">

                <!-- Resource Header -->
                <div class="d-flex align-items-center gap-3 mb-3">
                    @if (resource.ResourceType == ResourceType.Slide)
                    {
                        <i class="bi bi-file-pdf text-danger"></i>
                    }
                    else
                    {
                        <i class="bi bi-play-circle text-primary"></i>
                    }

                    <input type="hidden"
                           name="CourseChapters[@Model.Id].Resources[@j].Id"
                           value="@resource.Id" />

                    <div class="flex-grow-1">
                        <input type="text"
                               class="form-control"
                               name="CourseChapters[@Model.Id].Resources[@j].Title"
                               value="@resource.Title"
                               required
                               placeholder="Enter resource title">
                    </div>

                    <button type="button"
                            class="btn btn-outline-danger btn-sm"
                            onclick="removeResource(this)">
                        <i class="bi bi-trash"></i>
                    </button>
                </div>

                <!-- Resource Details -->
                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <select class="form-select"
                                name="CourseChapters[@Model.Id].Resources[@j].ResourceType"
                                value="@resource.ResourceType"
                                asp-items="ViewBag.ResourceTypes">
                        </select>
                    </div>

                    <div class="col-md-5">
                        <div class="input-group">
                            <input type="file"
                                   class="form-control"
                                   name="CourseChapters[@Model.Id].Resources[@j].File"
                                   accept=".pdf,.doc,.docx,.ppt,.pptx,.mp4,.mp3">
                        </div>
                    </div>

                    <div class="col-md-3">
                        @if (!string.IsNullOrEmpty(resource.FileUrl))
                        {
                            <a href="@resource.FileUrl"
                               class="btn btn-outline-primary w-100"
                               target="_blank">
                                <i class="bi bi-file-earmark-arrow-down"></i> View Resource
                            </a>
                        }
                    </div>
                </div>

            </div>
        </div>
    }
}