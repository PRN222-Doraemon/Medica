<template id="chapterTemplate">
    <div class="accordion-item chapter-card mb-3 shadow-sm border bg-light-blue" data-chapter-index="__CHAPTER_INDEX__">
        <div class="accordion-header border-bottom">
            <div class="d-flex align-items-center w-100 p-3">
                <button class="btn btn-link text-primary fw-bold me-2" type="button" data-bs-toggle="collapse"
                    data-bs-target="#collapse-__CHAPTER_ID__" aria-expanded="true"
                    aria-controls="collapse-__CHAPTER_ID__">
                    <i class="bi bi-chevron-down"></i>
                </button>
                <input type="hidden" name="CourseChapters[__CHAPTER_INDEX__].Id" value="0" />
                <div class="flex-grow-1">
                    <input type="text" class="form-control chapter-name mb-2"
                        name="CourseChapters[__CHAPTER_INDEX__].Name" value="" required
                        placeholder="Enter chapter name">
                    <textarea class="form-control" name="CourseChapters[__CHAPTER_INDEX__].Description" rows="2"
                        placeholder="Enter chapter description"></textarea>
                </div>
                <button type="button" class="btn btn-outline-danger btn-sm ms-2 me-2" onclick="removeChapter(this)">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        </div>
        <div id="collapse-__CHAPTER_ID__" class="accordion-collapse collapse show">
            <div class="accordion-body bg-light">
                <div class="resources-container">
                </div>
                <button type="button" class="btn btn-green-outline btn-sm mt-3" onclick="addResource(this)">
                    <i class="bi bi-plus-lg"></i> Add Resource
                </button>
            </div>
        </div>
    </div>
</template>