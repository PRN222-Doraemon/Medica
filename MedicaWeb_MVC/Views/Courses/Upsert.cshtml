@using MedicaWeb_MVC.ViewModels.Courses
@model CourseCreateVM

@{
    bool IsUpdate = ViewBag.Title == "Update Course";
}

<div class="container-fluid py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-body p-4">
                    <partial name="PartialViews/_CourseHeaderUpsert" model="@Model" />

                    <form asp-action="Upsert" asp-controller="Courses" method="post" id="updateCourseForm"
                        enctype="multipart/form-data">

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="ImgUrl" />

                        <div class="row">
                            <!-- Left Column - Basic Information -->
                            <div class="col-md-6 pe-md-4">
                                <partial name="PartialViews/_CourseBasicInforUpsert" model="@Model" />

                                <!-- Save button -->
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-green fs-5 fw-small btn-lg shadow">
                                        <i class="bi bi-check2-circle me-2"></i> SAVE
                                    </button>
                                </div>
                            </div>

                            <!-- Right Column - Course Content -->
                            <div class="col-md-6 ps-md-4">
                                <partial name="PartialViews/_CourseContentUpsert" model="@Model" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(45deg, #4e73df 0%, #224abe 100%);
    }
</style>

<script src="~/js/courses/course-update.js"></script>