@using MedicaWeb_MVC.ViewModels.User

@model RegisterVM

@{
	ViewData["Title"] = "Register";
}

<style>
	.google-login-btn {
		flex: 1;
		text-align: center;
		padding: 15px;
		font-size: 15px;
		border-radius: 30px;
		cursor: pointer;
		transition: all 0.3s ease;

	}

	.google-login-btn {
		background-color: white;
		border: 1px solid #f99b2a;
		color: #f99b2a;
		text-decoration: none;
	}

	.google-login-btn:hover {
		color: rgb(248, 108, 15);
		border: 1px solid rgb(248, 108, 15);
	}

	.register-link a {
		color: #f99b2a;
		text-decoration: none;
		font-weight: bold;
	}
</style>

<div class="register-container">
	<div class="left-panel">
		<div class="logo-container">
			<h1>Join Us!</h1>
		</div>
		<p class="description">
			Create an account to get started
		</p>
		<button class="learn-more-btn">Learn More</button>
	</div>

	<div class="right-panel">
		<form asp-action="Register" asp-controller="Accounts" method="post">
			<div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

			<div class="form-group row">
				<div class="col-md-6">
					<input asp-for="FirstName" type="text" class="form-control" placeholder="First Name" required>
					<span asp-validation-for="FirstName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<input asp-for="LastName" type="text" class="form-control" placeholder="Last Name" required>
					<span asp-validation-for="LastName" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-md-6">
					<input asp-for="UserName" type="text" class="form-control" placeholder="Username" required>
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<input asp-for="Email" type="email" class="form-control" placeholder="Email" required>
					<span asp-validation-for="Email" class="text-danger"></span>
				</div>
			</div>
			<!-- Password & Confirm Password -->
			<div class="form-group row">
				<div class="col-md-6">
					<input asp-for="Password" type="password" class="form-control" placeholder="Password" required>
					<span asp-validation-for="Password" class="text-danger"></span>
				</div>
				<div class="col-md-6">
					<input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password"
						required>
					<span asp-validation-for="ConfirmPassword" class="text-danger"></span>
				</div>
			</div>
			<div class="form-group">
				<input asp-for="DateOfBirth" type="date" class="form-control" required>
				<span asp-validation-for="DateOfBirth" class="text-danger"></span>
			</div>

			<div class="login-buttons">
				<button type="submit" class="login-btn">Register</button>
				<a asp-action="GoogleRegister" class="google-login-btn">
					<i class="bi bi-google"></i> Sign up with Google
				</a>
			</div>
		</form>

		<div class="register-link">
			Already have an account? <a asp-action="Login">Login</a>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
